# Port du serveur
PORT=1323

# Dossier racine des fichiers à indexer
FILES_ROOT=./files

# Activation de l'upload
ENABLE_UPLOAD=true

# Extensions autorisées pour l'upload
ALLOWED_EXT=.pdf,.png,.jpg,.jpeg,.gif,.webp,.svg,.txt,.md,.docx,.xlsx,.zip,.mp4,.mp3

# Chemin de la base de données
DB_PATH=./data/app.db

# Mode debug
DEBUG=true

# Taille maximum pour l'upload (en MB)
MAX_UPLOAD_SIZE=100
